{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "target": "hopper",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "hopper"
      },
      {
        "source": "/backfill",
        "function": "backfill"
      },
      {
        "source": "**",
        "destination": "404.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "emulators": {
    "hosting": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "ui": {
      "host": "0.0.0.0",
      "enabled": true,
      "port": 4000
    },
    "database": {
      "host": "0.0.0.0",
      "port": 9000
    }
  }
}
